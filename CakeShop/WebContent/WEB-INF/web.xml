<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>CakeShop</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
     <servlet-name>springMVC</servlet-name>        
     <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
     <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>springMVC</servlet-name>    
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <filter>
    	<filter-name>LoginFilter</filter-name>
    	<filter-class>com.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/index.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/users.jsp</url-pattern>
    </filter-mapping>
        <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/products.jsp</url-pattern>
    </filter-mapping>
        <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/member.jsp</url-pattern>
    </filter-mapping>
        <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/orders.jsp</url-pattern>
    </filter-mapping>
        <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/categories.jsp</url-pattern>
    </filter-mapping>
        <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/add-product.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/add-lesson.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/orderdetail.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/lesson.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>LoginFilter</filter-name>
    	<url-pattern>/admin/lessonsignup.jsp</url-pattern>
    </filter-mapping>
</web-app>